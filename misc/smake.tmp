{
    "build": {
        "name": "libxutils.a",
        "outputDir": "./build",
        "flags": "-g -O2 -Wall -D_XUTILS_DEBUG -D_XUTILS_USE_GNU",
        "libs": "-lpthread",
        "overwrite": true,
        "verbose": 2,

        "sources": [
            _SOURCE_LIST_
        ],

        "includes": [
            "./src",
            "./src/crypt",
            "./src/data",
            "./src/net",
            "./src/sys"
        ],

        "excludes": [
            "./examples",
            "./build",
            "./cmake",
            "./smake"
        ],

        _SSL_OBJECT_
    },

    "install": {
        "headerDir": "_INSTALL_PREFIX_/include/xutils",
        "binaryDir": "_INSTALL_PREFIX_/lib"
    }
}
